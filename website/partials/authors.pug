mixin authors(authors)
  each author, index in authors
    if authors.length == 2 && index == 0
      - suffix = ' and '
    else if index < authors.length - 2
      - suffix = ', '
    else if index < authors.length - 1
      - suffix = ', and '
    else
      - suffix = ''
    a(href = "https://github.com/" + author) #{author}
    |#{suffix}
